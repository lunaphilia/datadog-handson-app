[
  {
    "name": "sample",
    "image": "${repository_url}",
    "cpu": 0,
    "memory": 128,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "${region}",
        "awslogs-group": "/${name}/ecs",
        "awslogs-stream-prefix": "sample"
      }
    },
    "secrets": [
      {
        "name": "DBADDRESS",
        "valueFrom": "${database_address}"
      },
      {
        "name": "DBUSER",
        "valueFrom": "${database_user}"
      },
      {
        "name": "DBPASS",
        "valueFrom": "${database_password}"
      }
    ],
    "environment": [
      {
        "name": "DBPORT",
        "value": "3306"
      },
      {
        "name": "DBNAME",
        "value": "sample"
      }
    ]
  },
  {
    "name": "datadog",
    "image": "datadog/agent:${dd_image_tag}",
    "cpu": 10,
    "memory": 256,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "datadog",
        "awslogs-group": "/${name}/datadog"
      }
    },
    "secrets": [
      {
        "name": "DD_API_KEY",
        "valueFrom": "${dd_api_key}"
      }
    ],
    "environment": [
      {
        "name": "DD_APM_ENABLED",
        "value": "true"
      },
      {
        "name": "ECS_FARGATE",
        "value": "true"
      },
      {
        "name": "DD_TAGS",
        "value": "env:${env}"
      },
      {
        "name": "DD_APM_ENV",
        "value": "${env}"
      }
    ]
  }
]